{% extends 'base.html.twig' %}

{% block title %}{{ 'contacts--title'|trans }}{% endblock %}
{% block description %}{{ 'contacts--description'|trans }}{% endblock %}

{% block body %}
    <main>


        <section class="contacts">
            <div class="container">


                <div class="row row--space-between">
                    <div class="contacts--box">
                        <div class="header--block">

                            <h2 class="header--h2 wow slideInLeft">{{ 'contacts-title'|trans }}</h2>
                        </div>
                        <p class="contacts--p">{{ 'contacts-info'|trans }}:  <a href="mailto:help@zaymu-24.kz">help@criditnigroshi.com.ua</a></p>
                        <div class="row row--center">
                            <div class="contacts--email"></div>
                            <div class="contacts--email-text">help@criditnigroshi.com.ua</div>

                        </div>
                        <div class="calculator contacts--calculator">
                        {{ include("include/calculator.html.twig") }}
                        </div>
                    </div>


                        <div class="contacts--bg"></div>

                </div>
            </div>
        </section>
    </main>
{% endblock %}
{% block javascripts %}
    <script type="text/javascript" src="{{asset('js/calc.js')}}"></script>
{% endblock %}
