{% extends 'base.html.twig' %}

{% block title %}{{ 'home--title'|trans }}{% endblock %}
{% block description %}{{ 'home--description'|trans }}{% endblock %}

{% block body %}
    <section id="home-top" class="section home--top">
        <div class="container">
            <div class=" home--calculator">
                <h1>{{ 'home-h1'|trans }}</h1>
                <div class="calculator">
                        {{ include("include/calculator.html.twig") }}
                </div>
            </div>


        </div>
    </section>
    <section class="section home--advantages">
        <div class="container">
            <div class="header--block">

                <h2 class="header--h2 wow slideInLeft">{{ 'home--advantages-title'|trans }}</h2>
            </div>
            <div class="row row--space-between home--row-advantages">
                <div class="home--advantages-col home--advantages-col__1 wow slideInRight">
                    <div class="home--advantages-ico home--advantages-ico__1"></div>
                    <div class="home--advantages-text">{{ 'home--advantages-item-1'|trans }}</div>

                </div>
                <div class="home--advantages-col home--advantages-col__2 wow slideInUp">
                    <div class="home--advantages-ico home--advantages-ico__2"></div>
                    <div class="home--advantages-text">{{ 'home--advantages-item-2'|trans }}</div>

                </div>
                <div class="home--advantages-col home--advantages-col__3 wow slideInLeft">
                    <div class="home--advantages-ico home--advantages-ico__3"></div>
                    <div class="home--advantages-text">{{ 'home--advantages-item-3'|trans }}</div>

                </div>
            </div>

        </div>
    </section>
    <section class="section home--conditions">
        <div class="container">

            <div class="header--block">

                <h2 class="header--h2 wow slideInLeft">{{ 'home--conditions-title'|trans }}</h2>
            </div>
            <div class="row row--space-between home--row-conditions">
                <div class="home--col-conditions home--col-conditions__1">
                    <div class="row">
                        <div class="home--conditions-item home--conditions-item__1 wow slideInLef">
                            <h4 class="home--conditions-header">{{ 'home--conditions-item_1'|trans }}</h4>
                        </div>
                        <div class="home--conditions-item home--conditions-item__2 wow slideInRight">
                            <h4 class="home--conditions-header">{{ 'home--conditions-item_2'|trans }}</h4>

                        </div>
                        <div class="home--conditions-item home--conditions-item__3 wow slideInLeft">
                            <h4 class="home--conditions-header">{{ 'home--conditions-item_3'|trans }}</h4>
                        </div>
                        <div class="home--conditions-item home--conditions-item__4 wow slideInRight">
                            <h4 class="home--conditions-header">{{ 'home--conditions-item_4'|trans }}</h4>
                        </div>
                    </div>

                </div>
                <div class="home--col-conditions home--col-conditions__2">

                </div>
            </div>
        </div>

    </section>



    <section id="home-work" class="section home--work">
        <div class="container">
            <div class="header--block">

                <h2 class="header--h2 wow slideInLeft">{{ 'home--work-title'|trans }}</h2>
            </div>
            <div class="row row--space-between home--row-work">


                    <div class="home--work-item home--work-item__1 wow slideInRight">
                        <div class="home--work-ico home--work-ico__1"></div>
                        <div class="home--work-text">{{ 'home--work-title_1'|trans }}</div>
                        <div class="home--work-content">{{ 'home--work-content_1'|trans }}</div>
                    </div>
                    <div class="home--work-item home--work-item__2 wow slideInLeft">
                        <div class="home--work-ico home--work-ico__2"></div>
                        <div class="home--work-text">{{ 'home--work-title_2'|trans }}</div>
                        <div class="home--work-content">{{ 'home--work-content_2'|trans }}</div>
                    </div>
                    <div class="home--work-item home--work-item__3 wow slideInRight">
                        <div class="home--work-ico home--work-ico__3"></div>
                        <div class="home--work-text">{{ 'home--work-title_3'|trans }}</div>
                        <div class="home--work-content">{{ 'home--work-content_3'|trans }}</div>
                    </div>



            </div>
            <div class="row row--space-between home--row-work">
                <a class="btn home--work-btn" href="/{{ app.request.locale }}/credit-form">{{ 'RequestOnline'|trans }}</a>
            </div>

        </div>
    </section>
    <section id="home-reviews" class="section home--slider home--reviews">
        <div class="container">

            <div class="header--block">

                <h2 class="header--h2 wow slideInLeft">{{ 'home--reviews-title'|trans }}</h2>
            </div>


